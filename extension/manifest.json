{
  "manifest_version": 2,
  "name": "Dyslexic: Dyslexia Assistant",
  "version": "1.0",
  "description": "AI-powered reading assistant. Connects to Python backend for NLP.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dyslexic@aidancolvin.com",
      "strict_min_version": "79.0"
    }
  }
}
